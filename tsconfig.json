{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/node/esm",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "types"]
}

{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "ES2020",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}

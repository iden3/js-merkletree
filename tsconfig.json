{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "ES6",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "esModuleInterop": true,

    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
